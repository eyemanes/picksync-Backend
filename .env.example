# PickSync Backend Configuration
# Copy this file to .env and fill in your values

# ===== AUTHENTICATION =====
# CRITICAL: Change these in production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=ChangeThisSecurePassword123!
JWT_SECRET=generate-a-random-secret-here-use-crypto

# ===== API KEYS =====
# Reddit API (from https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# Grok AI API (from https://openrouter.ai)
OPENROUTER_API_KEY=your_openrouter_api_key

# ===== GROK CONFIGURATION =====
GROK_MODEL=x-ai/grok-4
GROK_TEMPERATURE=0.3
GROK_MAX_TOKENS=5000

# ===== SERVER =====
PORT=3002
NODE_ENV=development

# ===== SCHEDULER =====
ENABLE_SCHEDULER=true

# ===== SECURITY =====
# In production, set this to your frontend URL
# CORS_ORIGIN=https://yourdomain.com

# ===== RATE LIMITING =====
# Scan rate limit: 5 scans per 15 minutes
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# ===== TIPS =====
# Generate a secure JWT secret with:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
